/* pages/player/player.wxss */
page{
  box-sizing: border-box;
}
.bg-overlay{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  bottom: 0;
}
.cover-view{
  background-image: url('/images/cover_icon.png');
  background-position: center;
  background-size: cover;
  filter: blur(15px);
  background-repeat: no-repeat;
}
.cover-view-up{
   /* background-image: url('/images/cover_icon.jpg');*/
   background-color: rgba(0, 0, 0, .6);
}
.player-top{
  /* width: 100%; */
  height: 108rpx;
  line-height: 108rpx;
  text-align: center;
  background: linear-gradient(to bottom,rgba(0, 0, 0, .6),transparent);
  position: relative;
  padding: 0 76rpx;
  color: #fff;
}
.player-top image{
  position: absolute;
  width: 30rpx;
  height: 50rpx;
  top: 50%;
  margin-top: -25rpx;
  left: 38rpx;
}
.sing-cover{
  width: 384rpx;
  height: 384rpx;
  margin: 100rpx auto 0;
  z-index: 9;
  position: relative;
}
.sing-cover image{
  width: 100%;
  height: 100%;
}
.lrc-box{
  position: relative;
  height: 164rpx;
  width: 100%;
  text-align: center;
  color: #afabac;
  font-size: 28rpx;
  margin-top: 40rpx;
}
.play-panel{
  display: table;
  position: relative;
  width: 100%;
}
.play-panel > view{
  display: table-cell;
  vertical-align: middle;
}
.play-prev{
  text-align: right;
}
.play-play{
  text-align: center;
}
.play-next{
  text-align: left;
}
.play-prev image{
  width: 82rpx;
  height: 86rpx;
}
.play-play image{
  width: 114rpx;
  height: 114rpx;
}
.play-next image{
  width: 82rpx;
  height: 86rpx;
}
.play-status{
  position: relative;
  color: #fff;
  display: table;
  margin: 40rpx 0;
}
.play-status > view{
  display: table-cell;
  vertical-align: middle;
}
.play-slider{
  display: inline-block;
  width: 100%;
}
